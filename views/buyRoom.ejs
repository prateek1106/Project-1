<%- include('partials/header') %>
<a class="btn btn-light" href="/" role="button">LOGO</a>

<div class="jumbotron centered">
  <a class="btn btn-light" href="/logout" role="button">Log Out</a>
  <a class="btn btn-light" href="/profile" role="button"><%= firstName %></a>

  <h1>Hello <%=firstName%> <%=lastName%>, your user id: <%=username%> </h1>
  <h2>Name: <%= roomName %>, room id: <%=roomid%> </h2>
  <br><br>

  <form action="/done-buy" method="POST">
    <input type="hidden" name="roomName" value="<%= roomName %>">
    <input type="hidden" name="roomid" value="<%= roomid %>">
    <button type="submit" class="btn btn-dark"> Done </button>
  </form>

  <h3>List of Items: </h3>
  <% if(typeof(items)==="undefined" || items.length===0 ){ %>
    <p>None</p>
  <% }else{ %>
  <% for(var i=0 ; i<items.length ; i++){ %>
    <div>
      <form action="/buy" method="POST">
        <p>User ID:<%= items[i].username %>||  Item Description:<%= items[i].itemDescription %>

         <input type="hidden" name="roomName" value="<%=roomName%>">
         <input type="hidden" name="itemID" value="<%=items[i]._id%>">
         <input type="hidden" name="roomid" value="<%=roomid%>">
         <button type="submit" class="btn btn-dark">+</button></p>
        <br>
      </form>
    </div>
  <% } }%>

</div>
<%- include('partials/footer') %>
